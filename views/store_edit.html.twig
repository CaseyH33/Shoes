<html>
    <head>
        <title>Shoes and Stores</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    </head>
    <body>
        <div class="container">
            <h1>{{ store.getName }}</h1>

            <form action="/stores/{{ store.getId }}" method="post">
              <input name="_method" type="hidden" value="patch">
              <input id="store_id" name="store_id" type="hidden" value="{{ store.getId }}">
              <h4>Enter updated information about this store</h4>
              <div class="form-group">
                  <label for="name">Store Name</label>
                  <input id="name" name="name" class="form-control" type="text" value="{{ store.getName }}" required>
              </div>
              <div class="form-group">
                  <label for="phone_number">Phone Number</label>
                  <input id="phone_number" name="phone_number" class="form-control" type="text" value="{{ store.getPhoneNumber }}" required>
              </div>
              <div class="form-group">
                  <label for="address">Address</label>
                  <input id="address" name="address" class="form-control" type="text" value="{{ store.getAddress }}" required>
              </div>
              <button type="submit" class="btn btn-success">Submit</button>
            </form>

            <form action="/stores/{{ store.getId }}" method="post">
                <input name="_method" type="hidden" value="delete">
                <button type="submit" class="btn btn-danger">Delete this store</button>
            </form>
        </div>
    </body>
</html>
